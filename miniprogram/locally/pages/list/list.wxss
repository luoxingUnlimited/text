/* pages/list/list.wxss */
.search {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin: 10rpx 20rpx;
    padding: 15rpx;
    background-color: #fff;
    border-radius: 5rpx;
    box-shadow: 0 0 2px #777;
}

.content {
    display: flex;
    flex-direction: column; 
}

.content .item {
    width: 750rpx;
    display: flex;
    justify-content: space-between;
    background-color: #fff;
    margin-bottom: 10rpx;
}

.content .item image {
    width: 140rpx;
    height: 120rpx;
    margin: 10rpx;
}
.content .item .info {
    flex: 1;
    display: flex;
    flex-direction: column;
    font-size: 24rpx;
    font-weight: 700;
}
.content .item .info .tel,
.content .item .info .add,
.content .item .info .time {
    font-weight: 400;
    font-size: 20rpx;
    color: #333
}
.content .item .icon {
    width: 50rpx;
    height: 30rpx;
    background-color: red;
    border-radius: 30rpx;
    color: #fff;
    margin-right: 10rpx;
    font-size: 24rpx;
}
.load_more {
    display: flex;
    height: 90rpx;
    justify-content: center;
    align-items: center;
    color: #777;
}
.load_more.loading::before {
    content: '';
    height: 40rpx;
    width: 40rpx;
    margin-right: 10rpx;
    display: inline-block;
    vertical-align: middle;
    background: transparent url(data:image/svg+xml;base64,) no-repeat;
    background-size: 100%;
    animation: loading 1s steps(12) infinite;
}
@keyframes loading {
    0% {
        transition: rotate(0deg);
    }
    100% {
        transition: rotate(-360deg);
    }
}